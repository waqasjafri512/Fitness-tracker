{
    "version": 2,
    "builds": [
        {
            "src": "backend/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build",
                "buildCommand": "npm run build"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "backend/server.js"
        },
        {
            "source": "/((?!api/).*)",
            "destination": "frontend/index.html"
        }
    ]
}